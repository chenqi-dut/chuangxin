<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<settings>
        <!-- changes from the defaults -->
       <setting name="lazyLoadingEnabled" value="false" />
    </settings>

    <typeAliases> 
        <typeAlias alias="User" type="cx.learningcenter.model.User"/>
        <typeAlias alias="Problem" type="cx.learningcenter.model.Problem"/>
        <typeAlias alias="Hardness" type="cx.learningcenter.model.Hardness"/>
        <typeAlias alias="Category" type="cx.learningcenter.model.Category"/>
        <typeAlias alias="ProgressRecord" type="cx.learningcenter.model.ProgressRecord"/>
    </typeAliases> 
	<mappers>  
        <mapper resource="cx/learningcenter/mapper/User.xml" />  
        <mapper resource="cx/learningcenter/mapper/Problem.xml" />  
        <mapper resource="cx/learningcenter/mapper/Category.xml" />  
        <mapper resource="cx/learningcenter/mapper/Hardness.xml" /> 
        <mapper resource="cx/learningcenter/mapper/ProgressRecord.xml" />
    </mappers>
</configuration>